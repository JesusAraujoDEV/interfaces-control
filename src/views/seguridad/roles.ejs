<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Roles - Charlotte</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/public/css/seguridad/roles.css">
    <%- include('../partials/inyectarHelpersCss.ejs') %>
</head>
<body class="bg-[#f8fafc]">

    <div class="flex min-h-screen">
        <%- include('../partials/aside.ejs') %>

        <main class="flex-grow p-12">
            <header class="flex justify-between items-start mb-8">
                <div>
                    <h1 class="text-3xl font-bold text-gray-900">Roles</h1>
                    <p class="text-sm text-gray-500">Gestiona los roles de usuario y sus permisos dentro del sistema.</p>
                </div>
                <button class="btn-nuevo-rol" id="btnCrearRol">
                    <i class="fa-solid fa-plus mr-2"></i> Crear Nuevo Rol
                </button>
            </header>

            <div class="relative mb-6">
                <i class="fa-solid fa-magnifying-glass absolute left-4 top-3.5 text-gray-400 text-sm"></i>
                <input type="text" id="inputBusqueda" placeholder="Buscar por nombre de rol..." class="input-busqueda">
            </div>

            <div class="bg-white rounded-xl border border-gray-100 overflow-hidden">
                <table class="w-full text-left">
                    <thead class="bg-[#1e4d35] text-white uppercase text-[11px] tracking-wider font-bold">
                        <tr>
                            <th class="px-6 py-4">Nombre del Rol</th>
                            <th class="px-6 py-4">Descripción</th>
                            <th class="px-6 py-4 text-right">Acciones</th>
                        </tr>
                    </thead>
                    <tbody class="divide-y divide-gray-50" id="tbodyRoles">
                        <tr>
                            <td colspan="3" class="px-6 py-8 text-center text-gray-500">
                                <i class="fa-solid fa-spinner fa-spin mr-2"></i> Cargando roles...
                            </td>
                        </tr>
                    </tbody>
                </table>
                
                <div class="px-6 py-4 flex justify-center items-center gap-1 border-t border-gray-50" id="paginacion">
                    <!-- La paginación se generará dinámicamente -->
                </div>
            </div>
        </main>
    </div>
    <%- include('../partials/inyectarHelpersJs.ejs') %>
    <!-- Todos los demas scripts despues de estos que se inyectan -->
    <script>
        (function() {
            const notyf = window.seguridad_notyf || new Notyf();
            let todosLosRoles = [];
            let rolesFiltrados = [];
            const itemsPorPagina = 10;
            let paginaActual = 1;

            // Referencias a elementos del DOM
            const tbodyRoles = document.getElementById('tbodyRoles');
            const inputBusqueda = document.getElementById('inputBusqueda');
            const btnCrearRol = document.getElementById('btnCrearRol');
            const contenedorPaginacion = document.getElementById('paginacion');

            // Cargar roles
            async function cargarRoles() {
                try {
                    const response = await httpSeguridadClient('/api/seguridad/roles', {
                        method: 'GET'
                    });

                    if (!response.ok) {
                        throw new Error('Error al cargar roles');
                    }

                    todosLosRoles = await response.json();
                    rolesFiltrados = [...todosLosRoles];
                    paginaActual = 1;
                    renderizarRoles();
                    renderizarPaginacion();
                } catch (error) {
                    console.error('Error cargando roles:', error);
                    const errorMsg = error.message || 'Error al cargar los roles';
                    notyf.error(errorMsg);
                    tbodyRoles.innerHTML = `
                        <tr>
                            <td colspan="3" class="px-6 py-8 text-center text-red-500">
                                ${escapeHtml(errorMsg)}. Por favor, recarga la página.
                            </td>
                        </tr>
                    `;
                }
            }

            // Filtrar roles por nombre
            function filtrarRoles() {
                const query = inputBusqueda.value.toLowerCase().trim();
                
                if (query.length === 0) {
                    rolesFiltrados = [...todosLosRoles];
                } else {
                    rolesFiltrados = todosLosRoles.filter(rol => 
                        rol.name.toLowerCase().includes(query)
                    );
                }

                paginaActual = 1;
                renderizarRoles();
                renderizarPaginacion();
            }

            // Renderizar roles en la tabla
            function renderizarRoles() {
                if (rolesFiltrados.length === 0) {
                    tbodyRoles.innerHTML = `
                        <tr>
                            <td colspan="3" class="px-6 py-8 text-center text-gray-500">
                                No se encontraron roles
                            </td>
                        </tr>
                    `;
                    return;
                }

                const inicio = (paginaActual - 1) * itemsPorPagina;
                const fin = inicio + itemsPorPagina;
                const rolesPagina = rolesFiltrados.slice(inicio, fin);

                tbodyRoles.innerHTML = rolesPagina.map(rol => `
                    <tr>
                        <td class="px-6 py-4 text-sm font-bold text-gray-800">${escapeHtml(rol.name)}</td>
                        <td class="px-6 py-4 text-sm text-gray-500">${escapeHtml(rol.description || 'Sin descripción')}</td>
                        <td class="px-6 py-4 text-right space-x-3 text-gray-400">
                            <button class="btn-editar hover:text-blue-500" data-rol-id="${rol.id}">
                                <i class="fa-solid fa-pen"></i>
                            </button>
                            <button class="btn-eliminar hover:text-red-500" data-rol-id="${rol.id}">
                                <i class="fa-solid fa-trash"></i>
                            </button>
                        </td>
                    </tr>
                `).join('');

                // Agregar event listeners a los botones
                document.querySelectorAll('.btn-editar').forEach(btn => {
                    btn.addEventListener('click', (e) => {
                        const rolId = e.currentTarget.getAttribute('data-rol-id');
                        window.location.href = `/seguridad/roles/editar/${rolId}`;
                    });
                });

                document.querySelectorAll('.btn-eliminar').forEach(btn => {
                    btn.addEventListener('click', async (e) => {
                        const rolId = e.currentTarget.getAttribute('data-rol-id');
                        await eliminarRol(rolId);
                    });
                });
            }

            // Eliminar rol
            async function eliminarRol(rolId) {
                if (!confirm('¿Estás seguro de que deseas eliminar este rol?')) {
                    return;
                }

                try {
                    const response = await httpSeguridadClient(`/api/seguridad/roles/${rolId}`, {
                        method: 'DELETE'
                    });

                    if (!response.ok) {
                        const data = await response.json().catch(() => ({}));
                        const errorMsg = data.message || response.statusText || 'Error al eliminar el rol';
                        throw new Error(errorMsg);
                    }

                    notyf.success('Rol eliminado exitosamente');
                    
                    // Recargar roles
                    await cargarRoles();
                } catch (error) {
                    console.error('Error eliminando rol:', error);
                    const errorMsg = error.message || 'Error al eliminar el rol';
                    notyf.error(errorMsg);
                }
            }

            // Renderizar paginación
            function renderizarPaginacion() {
                const totalPaginas = Math.ceil(rolesFiltrados.length / itemsPorPagina);
                
                if (totalPaginas <= 1) {
                    contenedorPaginacion.innerHTML = '';
                    return;
                }

                let html = '';

                // Botón anterior
                html += `
                    <button class="p-2 text-gray-400 ${paginaActual === 1 ? 'opacity-50 cursor-not-allowed' : 'hover:text-gray-600'}" 
                            ${paginaActual === 1 ? 'disabled' : ''} 
                            onclick="window.rolesPaginacion.irAPagina(${paginaActual - 1})">
                        <i class="fa-solid fa-chevron-left text-xs"></i>
                    </button>
                `;

                // Números de página
                const maxBotones = 7;
                let inicioPagina = Math.max(1, paginaActual - Math.floor(maxBotones / 2));
                let finPagina = Math.min(totalPaginas, inicioPagina + maxBotones - 1);

                if (finPagina - inicioPagina < maxBotones - 1) {
                    inicioPagina = Math.max(1, finPagina - maxBotones + 1);
                }

                if (inicioPagina > 1) {
                    html += `<button class="pag-btn" onclick="window.rolesPaginacion.irAPagina(1)">1</button>`;
                    if (inicioPagina > 2) {
                        html += `<span class="text-gray-400 px-2 text-sm">...</span>`;
                    }
                }

                for (let i = inicioPagina; i <= finPagina; i++) {
                    html += `
                        <button class="pag-btn ${i === paginaActual ? 'activo' : ''}" 
                                onclick="window.rolesPaginacion.irAPagina(${i})">
                            ${i}
                        </button>
                    `;
                }

                if (finPagina < totalPaginas) {
                    if (finPagina < totalPaginas - 1) {
                        html += `<span class="text-gray-400 px-2 text-sm">...</span>`;
                    }
                    html += `<button class="pag-btn" onclick="window.rolesPaginacion.irAPagina(${totalPaginas})">${totalPaginas}</button>`;
                }

                // Botón siguiente
                html += `
                    <button class="p-2 text-gray-400 ${paginaActual === totalPaginas ? 'opacity-50 cursor-not-allowed' : 'hover:text-gray-600'}" 
                            ${paginaActual === totalPaginas ? 'disabled' : ''} 
                            onclick="window.rolesPaginacion.irAPagina(${paginaActual + 1})">
                        <i class="fa-solid fa-chevron-right text-xs"></i>
                    </button>
                `;

                contenedorPaginacion.innerHTML = html;
            }

            // Función para ir a una página específica
            function irAPagina(pagina) {
                const totalPaginas = Math.ceil(rolesFiltrados.length / itemsPorPagina);
                if (pagina < 1 || pagina > totalPaginas) return;
                
                paginaActual = pagina;
                renderizarRoles();
                renderizarPaginacion();
                
                // Scroll al inicio de la tabla
                tbodyRoles.scrollIntoView({ behavior: 'smooth', block: 'start' });
            }

            // Función helper para escapar HTML
            function escapeHtml(text) {
                const div = document.createElement('div');
                div.textContent = text;
                return div.innerHTML;
            }

            // Exponer funciones globalmente para los botones de paginación
            window.rolesPaginacion = {
                irAPagina: irAPagina
            };

            // Event listeners
            inputBusqueda.addEventListener('input', filtrarRoles);
            btnCrearRol.addEventListener('click', () => {
                window.location.href = '/seguridad/roles/crear';
            });

            // Inicializar
            document.addEventListener('DOMContentLoaded', () => {
                cargarRoles();
            });
        })();
    </script>
</body>
</html>