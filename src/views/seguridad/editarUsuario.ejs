<!DOCTYPE html>
<html lang="es">
<head>
    <meta charset="UTF-8">
    <meta name="viewport" content="width=device-width, initial-scale=1.0">
    <title>Editar Usuario - Charlotte</title>
    <script src="https://cdn.tailwindcss.com"></script>
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/6.4.0/css/all.min.css">
    <link rel="stylesheet" href="/css/seguridad/editarUsuario.css">
    <%- include('../partials/inyectarHelpersCss.ejs') %>
</head>
<body class="bg-gray-50">

    <div class="contenedor-dashboard">
        
        <%- include('../partials/aside.ejs') %>

        <main class="contenido-principal">
            
            <header class="cabecera-crear">
                <div class="info-titulo">
                    <nav class="breadcrumb">Usuarios / John Doe / editar</nav>
                    <h1>Editar Usuario con id <%= userId %></h1>
                </div>
                <div class="botones-cabecera">
                    <button class="btn-cancelar">Cancelar</button>
                    <button class="btn-guardar">Guardar Cambios</button>
                </div>
            </header>

            <div class="contenedor-centrado">
                <section class="tarjeta-blanca">
                    <h3>Detalles del Usuario</h3>
                    
                    <form class="formulario-usuario" id="formEditarUsuario">
                        <div class="grupo">
                            <label>Nombre <span class="text-red-500">*</span></label>
                            <input type="text" id="inputNombre" required>
                            <span class="error-message text-red-500 text-sm hidden"></span>
                        </div>

                        <div class="grupo">
                            <label>Apellido <span class="text-red-500">*</span></label>
                            <input type="text" id="inputApellido" required>
                            <span class="error-message text-red-500 text-sm hidden"></span>
                        </div>

                        <div class="grupo">
                            <label>Fecha de Nacimiento <span class="text-red-500">*</span></label>
                            <input type="date" id="inputFechaNacimiento" required>
                            <span class="error-message text-red-500 text-sm hidden"></span>
                        </div>

                        <div class="grupo">
                            <label>DNI / Cédula <span class="text-red-500">*</span></label>
                            <input type="text" id="inputDni" placeholder="V31629822" required>
                            <span class="error-message text-red-500 text-sm hidden"></span>
                        </div>

                        <div class="fila-input">
                            <div class="grupo">
                                <label>Correo Electrónico <span class="text-red-500">*</span></label>
                                <input type="email" id="inputEmail" required>
                                <span class="error-message text-red-500 text-sm hidden"></span>
                            </div>
                            <div class="grupo">
                                <label>Teléfono</label>
                                <input type="text" id="inputTelefono" placeholder="04129876543">
                                <span class="error-message text-red-500 text-sm hidden"></span>
                            </div>
                        </div>

                        <div class="grupo">
                            <label>Dirección</label>
                            <input type="text" id="inputDireccion">
                            <span class="error-message text-red-500 text-sm hidden"></span>
                        </div>
                        <div class="grupo">
                            <label>Nueva contraseña</label>
                            <input type="password" id="inputNuevaContrasena" placeholder="Dejar en blanco para mantener la actual">
                            <span class="error-message text-red-500 text-sm hidden"></span>
                        </div>

                        <div class="grupo">
                            <label>Tipo de Usuario</label>
                            <select id="selectDataType">
                                <option value="">Seleccionar tipo (opcional)</option>
                            </select>
                            <span class="error-message text-red-500 text-sm hidden"></span>
                        </div>

                        <div class="grupo">
                            <label>Activo</label>
                            <input type="checkbox" id="inputIsActive" checked style="width: auto;">
                        </div>
                    </form>
                </section>

                <section class="tarjeta-blanca mt-6">
                    <div class="cabecera-tarjeta">
                        <h3>Roles</h3>
                    </div>

                    <div class="buscador-roles">
                        <i class="fa-solid fa-magnifying-glass"></i>
                        <input type="text" id="inputBuscarRoles" placeholder="Buscar y añadir roles...">
                    </div>

                    <div id="listaRolesDropdown" class="hidden absolute z-10 bg-white border border-gray-200 rounded-lg shadow-lg max-h-60 overflow-y-auto w-full mt-1"></div>

                    <div class="contenedor-tags" id="contenedorTagsRoles">
                        <!-- Los roles seleccionados se mostrarán aquí -->
                    </div>
                </section>
            </div>

        </main>
    </div>
    <%- include('../partials/inyectarHelpersJs.ejs') %>
    <!-- Todos los demas scripts despues de estos que se inyectan -->
    <script>
        (function() {
            const notyf = window.seguridad_notyf || new Notyf();
            const userId = <%= userId %>;
            let rolesDisponibles = [];
            let rolesSeleccionados = [];
            let dataTypeOptions = [];

            // Referencias a elementos del DOM
            const form = document.getElementById('formEditarUsuario');
            const btnGuardar = document.querySelector('.btn-guardar');
            const btnCancelar = document.querySelector('.btn-cancelar');
            const inputBuscarRoles = document.getElementById('inputBuscarRoles');
            const listaRolesDropdown = document.getElementById('listaRolesDropdown');
            const contenedorTagsRoles = document.getElementById('contenedorTagsRoles');
            const selectDataType = document.getElementById('selectDataType');

            // Cargar datos del usuario
            async function cargarDatosUsuario() {
                try {
                    const response = await httpSeguridadClient(`/api/seguridad/users/${userId}`, {
                        method: 'GET'
                    });

                    if (!response.ok) {
                        throw new Error('Error al cargar datos del usuario');
                    }

                    const usuario = await response.json();

                    // Llenar formulario
                    document.getElementById('inputNombre').value = usuario.name || '';
                    document.getElementById('inputApellido').value = usuario.lastName || '';
                    document.getElementById('inputDni').value = usuario.dni || '';
                    document.getElementById('inputEmail').value = usuario.email || '';
                    document.getElementById('inputTelefono').value = usuario.phone || '';
                    document.getElementById('inputDireccion').value = usuario.address || '';
                    document.getElementById('inputIsActive').checked = usuario.isActive !== false;

                    // Fecha de nacimiento
                    if (usuario.birthDate) {
                        const fecha = new Date(usuario.birthDate);
                        const fechaFormateada = fecha.toISOString().split('T')[0];
                        document.getElementById('inputFechaNacimiento').value = fechaFormateada;
                    }

                    // DataType
                    if (usuario.dataType) {
                        selectDataType.value = usuario.dataType;
                    }

                    // Roles
                    if (usuario.roles && Array.isArray(usuario.roles)) {
                        rolesSeleccionados = usuario.roles.map(rol => ({
                            id: rol.id,
                            name: rol.name
                        }));
                        renderizarTagsRoles();
                    }

                } catch (error) {
                    console.error('Error cargando usuario:', error);
                    notyf.error('Error al cargar los datos del usuario');
                }
            }

            // Cargar roles disponibles
            async function cargarRoles() {
                try {
                    const response = await httpSeguridadClient('/api/seguridad/roles', {
                        method: 'GET'
                    });

                    if (!response.ok) {
                        throw new Error('Error al cargar roles');
                    }

                    rolesDisponibles = await response.json();
                    configurarBuscadorRoles();
                } catch (error) {
                    console.error('Error cargando roles:', error);
                    notyf.error('Error al cargar los roles disponibles');
                }
            }

            // Cargar opciones de dataType
            async function cargarDataTypeOptions() {
                try {
                    const response = await httpSeguridadClient('/api/seguridad/enums/User/dataType', {
                        method: 'GET'
                    });

                    if (!response.ok) {
                        throw new Error('Error al cargar opciones de tipo de usuario');
                    }

                    dataTypeOptions = await response.json();
                    
                    // Llenar el select con las opciones
                    dataTypeOptions.forEach(option => {
                        const optionElement = document.createElement('option');
                        optionElement.value = option;
                        optionElement.textContent = option;
                        selectDataType.appendChild(optionElement);
                    });
                } catch (error) {
                    console.error('Error cargando dataType options:', error);
                    // No mostrar error si el endpoint no existe aún
                }
            }

            // Configurar buscador de roles
            function configurarBuscadorRoles() {
                inputBuscarRoles.addEventListener('input', (e) => {
                    const query = e.target.value.toLowerCase().trim();
                    
                    if (query.length === 0) {
                        listaRolesDropdown.classList.add('hidden');
                        return;
                    }

                    const rolesFiltrados = rolesDisponibles.filter(rol => 
                        !rolesSeleccionados.find(r => r.id === rol.id) &&
                        rol.name.toLowerCase().includes(query)
                    );

                    if (rolesFiltrados.length === 0) {
                        listaRolesDropdown.classList.add('hidden');
                        return;
                    }

                    listaRolesDropdown.innerHTML = '';
                    listaRolesDropdown.classList.remove('hidden');

                    rolesFiltrados.forEach(rol => {
                        const item = document.createElement('div');
                        item.className = 'px-4 py-2 hover:bg-gray-100 cursor-pointer';
                        item.textContent = rol.name;
                        item.addEventListener('click', () => {
                            agregarRol(rol);
                            inputBuscarRoles.value = '';
                            listaRolesDropdown.classList.add('hidden');
                        });
                        listaRolesDropdown.appendChild(item);
                    });
                });

                // Cerrar dropdown al hacer click fuera
                document.addEventListener('click', (e) => {
                    if (!inputBuscarRoles.contains(e.target) && !listaRolesDropdown.contains(e.target)) {
                        listaRolesDropdown.classList.add('hidden');
                    }
                });
            }

            // Agregar rol seleccionado
            function agregarRol(rol) {
                if (rolesSeleccionados.find(r => r.id === rol.id)) {
                    return;
                }

                rolesSeleccionados.push(rol);
                renderizarTagsRoles();
            }

            // Remover rol seleccionado
            function removerRol(rolId) {
                rolesSeleccionados = rolesSeleccionados.filter(r => r.id !== rolId);
                renderizarTagsRoles();
            }

            // Renderizar tags de roles
            function renderizarTagsRoles() {
                contenedorTagsRoles.innerHTML = '';
                
                rolesSeleccionados.forEach(rol => {
                    const tag = document.createElement('span');
                    tag.className = 'tag tag-azul';
                    tag.innerHTML = `${rol.name} <i class="fa-solid fa-xmark cursor-pointer"></i>`;
                    tag.querySelector('i').addEventListener('click', () => removerRol(rol.id));
                    contenedorTagsRoles.appendChild(tag);
                });
            }

            // Validar formulario
            function validarFormulario() {
                let esValido = true;

                // Limpiar errores previos
                document.querySelectorAll('.error-message').forEach(el => {
                    el.classList.add('hidden');
                    el.textContent = '';
                });

                const nombre = document.getElementById('inputNombre').value.trim();
                const apellido = document.getElementById('inputApellido').value.trim();
                const fechaNacimiento = document.getElementById('inputFechaNacimiento').value;
                const dni = document.getElementById('inputDni').value.trim();
                const email = document.getElementById('inputEmail').value.trim();
                const telefono = document.getElementById('inputTelefono').value.trim();

                // Validar nombre
                if (!nombre) {
                    mostrarError('inputNombre', 'El nombre es requerido');
                    esValido = false;
                }

                // Validar apellido
                if (!apellido) {
                    mostrarError('inputApellido', 'El apellido es requerido');
                    esValido = false;
                }

                // Validar fecha de nacimiento
                if (!fechaNacimiento) {
                    mostrarError('inputFechaNacimiento', 'La fecha de nacimiento es requerida');
                    esValido = false;
                } else {
                    const fecha = new Date(fechaNacimiento);
                    const hoy = new Date();
                    if (fecha > hoy) {
                        mostrarError('inputFechaNacimiento', 'La fecha de nacimiento no puede ser futura');
                        esValido = false;
                    }
                }

                // Validar DNI
                if (!dni) {
                    mostrarError('inputDni', 'El DNI es requerido');
                    esValido = false;
                } else {
                    const dniRegex = /^[VE]\d{6,8}$/;
                    if (!dniRegex.test(dni)) {
                        mostrarError('inputDni', 'El DNI debe tener prefijo V o E seguido de 6 a 8 dígitos');
                        esValido = false;
                    }
                }

                // Validar email
                if (!email) {
                    mostrarError('inputEmail', 'El correo electrónico es requerido');
                    esValido = false;
                } else {
                    const emailRegex = /^[^\s@]+@[^\s@]+\.[^\s@]+$/;
                    if (!emailRegex.test(email)) {
                        mostrarError('inputEmail', 'El correo electrónico no es válido');
                        esValido = false;
                    }
                }

                // Validar teléfono (opcional pero si se proporciona debe ser válido)
                if (telefono) {
                    const telefonoRegex = /^(0414|0412|0426|0422|0424|0416)\d{7}$/;
                    if (!telefonoRegex.test(telefono)) {
                        mostrarError('inputTelefono', 'El teléfono debe tener formato venezolano válido (ej: 04129876543)');
                        esValido = false;
                    }
                }

                return esValido;
            }

            // Mostrar error en campo
            function mostrarError(inputId, mensaje) {
                const input = document.getElementById(inputId);
                const errorSpan = input.parentElement.querySelector('.error-message');
                if (errorSpan) {
                    errorSpan.textContent = mensaje;
                    errorSpan.classList.remove('hidden');
                }
            }

            // Actualizar usuario
            async function actualizarUsuario() {
                if (!validarFormulario()) {
                    notyf.error('Por favor, corrige los errores en el formulario');
                    return;
                }

                const nombre = document.getElementById('inputNombre').value.trim();
                const apellido = document.getElementById('inputApellido').value.trim();
                const fechaNacimiento = document.getElementById('inputFechaNacimiento').value;
                const dni = document.getElementById('inputDni').value.trim();
                const email = document.getElementById('inputEmail').value.trim();
                const telefono = document.getElementById('inputTelefono').value.trim();
                const direccion = document.getElementById('inputDireccion').value.trim();
                const dataType = document.getElementById('selectDataType').value;
                const isActive = document.getElementById('inputIsActive').checked;
                const newPassword = document.getElementById('inputNuevaContrasena').value;

                const body = {
                    name: nombre,
                    lastName: apellido,
                    birthDate: fechaNacimiento,
                    dni: dni,
                    email: email,
                    isActive: isActive
                };

                if (telefono) body.phone = telefono;
                if (direccion) body.address = direccion;
                if (dataType) body.dataType = dataType;
                if (rolesSeleccionados.length > 0) {
                    body.roles = rolesSeleccionados.map(r => r.id);
                }
                if (newPassword && newPassword.trim() !== '') {
                    body.password = newPassword;
                }

                try {
                    btnGuardar.disabled = true;
                    btnGuardar.textContent = 'Guardando...';

                    const response = await httpSeguridadClient(`/api/seguridad/users/${userId}`, {
                        method: 'PATCH',
                        body: JSON.stringify(body)
                    });

                    const data = await response.json();

                    if (!response.ok) {
                        // Manejar errores de validación
                        console.error('Error actualizando usuario:', data);
                        if (data.errors && Array.isArray(data.errors)) {
                            data.errors.forEach(error => {
                                if (error.path === 'password') {
                                    mostrarError('inputNuevaContrasena', error.message);
                                } else {
                                    const inputId = `input${error.path.charAt(0).toUpperCase() + error.path.slice(1)}`;
                                    mostrarError(inputId, error.message);
                                }
                            });
                            const errorMsg = data.message || response.statusText || 'Error al actualizar el usuario';
                            notyf.error(errorMsg);
                        } else {
                            const errorMsg = data.message || response.statusText || 'Error al actualizar el usuario';
                            notyf.error(errorMsg);
                        }
                        return;
                    }

                    // Éxito - recargar página
                    notyf.success('Usuario actualizado exitosamente');
                    setTimeout(() => {
                        window.location.reload();
                    }, 1000);

                } catch (error) {
                    console.error('Error actualizando usuario:', error);
                    const errorMsg = error.message || 'Error al actualizar el usuario. Por favor, intenta nuevamente.';
                    notyf.error(errorMsg);
                } finally {
                    btnGuardar.disabled = false;
                    btnGuardar.textContent = 'Guardar Cambios';
                }
            }

            // Event listeners
            btnGuardar.addEventListener('click', (e) => {
                e.preventDefault();
                actualizarUsuario();
            });

            btnCancelar.addEventListener('click', () => {
                window.location.href = '/seguridad/usuarios';
            });

            // Inicializar
            document.addEventListener('DOMContentLoaded', async () => {
                await cargarRoles();
                await cargarDataTypeOptions();
                await cargarDatosUsuario();
            });
        })();
    </script>
</body>
</html>